<div class="body_container">
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-image">
        <!-- <img src="images/sample-1.jpg"> -->
        <%= image_tag @product.avatar %>
      </div>
      <div class="card-content">
        <span class="card-title"><%= @product.name %></span>
        <p><%= @product.recommendation %></p>
        <p><%= @product.price %></p>
      </div>
    </div>

<%= form_for [@product, @review] do |f| %>

<div style="margin: 8px 0">
  <%= f.label :評価, style: { 'margin-right' => 8 } %>
  <%= f.number_field :rate, placeholder: '評価', value: 1, max: 5, min: 1, html: { class: "search__query", style: 'text-align: right;' } %>
</div>

<div style="margin: 8px 0">
  <%= f.label :商品概要, style: { 'margin-right' => 8 } %>
  <%= f.text_area :comment, placeholder: 'ここに記入', style: 'width: 100%;height: 150px;' %>
</div>

<div class="row">
  <div class="col10 push1">
    <%= button_tag type: "submit", class: "btn btn--block" do %>
    投稿する<i class="icon-arrow-right"></i>
    <% end %>
  </div>
</div>

<% end %>

  </div>
</div>
</div>
