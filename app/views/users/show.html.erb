
<div class="row">
  <% @products.each do |product| %> <!--current_userの定義文はどこ？-->
    <div class="col s12 m6 l3">

      <div class="card">

        <div class="card-image">
          <%= image_tag product.avatar %>
        </div>

        <div class="card-content">
          <span class="card-title"><%= product.name %></span>
            <% product.reviews.where(user_id: current_user).each do |review| %>  <!-- productとreviewの順番の意味 -->
            <p><%= review.comment %></p>
            <% end %>
        </div>

      </div>

    </div>
  <% end %>
</div>


