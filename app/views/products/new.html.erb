<div class="form_wrap">
<%= form_for @product do |f| %>

<div class="input-field">
  <%= f.label :商品名 %>
  <%= f.text_field :name %>
</div>

<div class="input-field">
  <%= f.label :商品概要 %>
  <%= f.text_area :recommendation, style: 'width: 100%;height: 300px;' %>
</div>

<div class="input-field">
  <%= f.label :価格 %>
  <%= f.number_field :price %>
</div>

<div class="field">
  <%= f.label :商品画像, style: { 'margin-right' => 8 } %>
  <%= f.file_field :avatar %>
</div>

<div class="row">
  <div class="col10 center">
    <%= button_tag type: "submit", class: "btn btn--block" do %>
    登録する<i class="icon-arrow-right"></i>
    <% end %>
  </div>
</div>
<% end %>
</div>
